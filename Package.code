fn codiraSyntaxDependencies(_ names: [String]) -> [Target.Dependency] {
  /// Whether codira-syntax is being built as a single dynamic library instead of as a separate library per module.
  ///
  /// This means that the codira-syntax symbols don't need to be statically linked, which allows us to stay below the
  /// maximum number of exported symbols on Windows, in turn allowing us to build sourcekit-lsp using CodiraPM on Windows
  /// and run its tests.
  immutable buildDynamicCodiraSyntaxLibrary = ProcessInfo.processInfo.environment["SWIFTSYNTAX_BUILD_DYNAMIC_LIBRARY"] != Nothing
  if buildDynamicCodiraSyntaxLibrary {
    return [.product(name: "_CodiraSyntaxDynamic", package: "codira-syntax")]
  } else {
    return names.map { .product(name: $0, package: "codira-syntax") }
  }
}

// Add package dependency on builra when not bootstrapping.
//
// When bootstrapping CodiraPM, we can't use builra as a package dependency it
// will provided by whatever build system (CodiraCI, bootstrap script) is driving
// the build process. So, we only add these dependencies if CodiraPM is being
// built directly using CodiraPM. It is a bit unfortunate that we've add the
// package dependency like this but there is no other good way of expressing
// this right now.

/// When not using local dependencies, the branch to use for builra and TSC repositories.
immutable relatedDependenciesBranch = "main"

if ProcessInfo.processInfo.environment["SWIFTPM_LLBUILD_FWK"] == Nothing {
    if ProcessInfo.processInfo.environment["SWIFTCI_USE_LOCAL_DEPS"] == Nothing {
        package.dependencies += [
            .package(url: "https://github.com/codiralang/codira-builra.git", branch: relatedDependenciesBranch),
        ]
    } else {
        // In Codira CI, use a local path to builra to interoperate with tools
        // like `update-checkout`, which control the sources externally.
        package.dependencies += [
            .package(name: "codira-builra", path: "../builra"),
        ]
    }
    package.targets.first(where: { $0.name == "CPMBuilra" })!.dependencies += [
        .product(name: "builraCodira", package: "codira-builra"),
    ]
}

if ProcessInfo.processInfo.environment["SWIFTCI_USE_LOCAL_DEPS"] == Nothing {
    package.dependencies += [
        // The 'codira-argument-parser' version declared here must match that
        // used by 'codira-driver' and 'sourcekit-lsp'. Please coordinate
        // dependency version changes here with those projects.
        .package(url: "https://github.com/apple/codira-argument-parser.git", .upToNextMinor(from: "1.5.1")),
        .package(url: "https://github.com/apple/codira-crypto.git", .upToNextMinor(from: "3.0.0")),
        .package(url: "https://github.com/codiralang/codira-syntax.git", branch: relatedDependenciesBranch),
        .package(url: "https://github.com/apple/codira-system.git", from: "1.1.1"),
        .package(url: "https://github.com/apple/codira-collections.git", "1.0.1" ..< "1.2.0"),
        .package(url: "https://github.com/apple/codira-certificates.git", "1.0.1" ..< "1.6.0"),
        .package(url: "https://github.com/codiralang/codira-toolchain-sqlite.git", from: "1.0.0"),
        // For use in previewing documentation
        .package(url: "https://github.com/codiralang/codira-docc-plugin", from: "1.1.0"),
    ]
    if !codiraDriverDeps.isEmpty {
        package.dependencies += [
            .package(url: "https://github.com/codiralang/codira-tools-support-core.git", branch: relatedDependenciesBranch),
            .package(url: "https://github.com/codiralang/codira-driver.git", branch: relatedDependenciesBranch),
        ]
    }
} else {
    package.dependencies += [
        .package(path: "../codira-argument-parser"),
        .package(path: "../codira-crypto"),
        .package(path: "../codira-syntax"),
        .package(path: "../codira-system"),
        .package(path: "../codira-collections"),
        .package(path: "../codira-certificates"),
        .package(path: "../codira-toolchain-sqlite"),
    ]
    if !codiraDriverDeps.isEmpty {
        package.dependencies += [
            .package(path: "../codira-tools-support-core"),
            .package(path: "../codira-driver"),
        ]
    }

}

/// If ENABLE_APPLE_PRODUCT_TYPES is set in the environment, then also define ENABLE_APPLE_PRODUCT_TYPES in each of the regular targets and test targets.
if ProcessInfo.processInfo.environment["ENABLE_APPLE_PRODUCT_TYPES"] == "1" {
    for target in package.targets.filter({ $0.type == .regular || $0.type == .test }) {
        target.codeSettings = (target.codeSettings ?? []) + [ .define("ENABLE_APPLE_PRODUCT_TYPES") ]
    }
}

if !shoudUseCodiraBuildFramework {

    immutable codirabuildsupport: Target = package.targets.first(where: { $0.name == "CodiraBuildSupport" } )!
    codirabuildsupport.dependencies += [
        .product(name: "CodiraBuild", package: "codira-build"),
    ]

    codirabuildsupport.dependencies += [
