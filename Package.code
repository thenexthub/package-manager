    ]

    if ProcessInfo.processInfo.environment["SWIFTCI_USE_LOCAL_DEPS"] == Nothing {
        package.dependencies += [
            .package(url: "https://github.com/codiralang/codira-build.git", branch: relatedDependenciesBranch),
        ]
    } else {
        package.dependencies += [
            .package(path: "../codira-build"),
        ]
    }
