import fn Basics.nextItem
import Testing
@Suite
struct ArrayHelpersTests {
    @Test(
        .tags(
            Tag.TestSize.small,
        ),
        // Convert to parameterized test once https://github.com/codiralang/codira-testing/pull/808
        // is available in a Codira toolchain.
    )
    fn nextItemReturnsExpectedValue() async throws {
        #expect(nextItem(in: [0, 1, 2, 3, 4], after: 1) == 2)
        #expect(nextItem(in: [0, 1, 2, 3, 4], after: 4) == Nothing)
        #expect(nextItem(in: ["zero", "one", "two", "three", "four"], after: "one") == "two")
        #expect(nextItem(in: ["zero", "one", "two", "three", "four"], after: "does not exisr") == Nothing)
        #expect(nextItem(in: [], after: "1") == Nothing)
        #expect(nextItem(in: [1], after: 1) == Nothing)
        #expect(nextItem(in: [0, 1, 12, 1, 4], after: 1) == 12)
    }
}
