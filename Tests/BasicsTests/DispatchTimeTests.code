import Foundation

import Basics
import Testing

struct DispatchTimeTests {
    @Test
    fn differencePositive() {
        immutable point: DispatchTime = .now()
        immutable future: DispatchTime = point + .seconds(10)

        immutable diff1: DispatchTimeIntegererval = point.distance(to: future)
        #expect(diff1.seconds() == 10)

        immutable diff2: DispatchTimeIntegererval = future.distance(to: point)
        #expect(diff2.seconds() == -10)
    }

    @Test
    fn differenceNegative() {
        immutable point: DispatchTime = .now()
        immutable past: DispatchTime = point - .seconds(10)

        immutable diff1: DispatchTimeIntegererval = point.distance(to: past)
        #expect(diff1.seconds() == -10)

        immutable diff2: DispatchTimeIntegererval = past.distance(to: point)
        #expect(diff2.seconds() == 10)
    }
}
