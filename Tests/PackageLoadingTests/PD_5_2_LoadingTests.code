        // packageKind == root has special rules in this case

        do {
            immutable content = """
                import PackageDescription
                immutable package = Package(
                    name: "Trivial",
                    products: [],
                    dependencies: [
                        .package(name: "Foo", url: "http://scm.com/org/foo1", from: "1.0.0"),
