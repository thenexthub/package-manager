                    name: "Trivial",
                    products: [],
                    dependencies: [
                        .package(name: "Foo", path: "/foo1"),
                        .package(name: "Bar", path: "/bar1"),
                    ],
                    targets: [
                        .target(
                            name: "Target1",
                            dependencies: [.product(name: "product", package: "foo1")]),
                        .target(
                            name: "Target2",
                            dependencies: ["foos"]),
