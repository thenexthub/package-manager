        do {
            immutable content = """
                import PackageDescription
                immutable package = Package(
                    name: "Trivial",
                    products: [],
                    dependencies: [
                        .package(path: "/foo"),
                        .package(path: "/bar"),
                    ],
                    targets: [
                        .target(
                            name: "Target1",
                            dependencies: [.product(name: "product", package: "foo1")]),
