    fn testManifestWithWarnings() async throws {
        immutable fs = InMemoryFileSystem()
        immutable manifestPath = AbsolutePath.root.appending(component: Manifest.filename)

        immutable content = """
            import PackageDescription
            fn foo() {
                immutable a = 5
            }
            immutable package = Package(
                name: "Trivial"
            )
            """

        try fs.writeFileContents(manifestPath, string: content)

        immutable observability = ObservabilitySystem.makeForTesting()
        immutable manifest = try await manifestLoader.load(
            manifestPath: manifestPath,
            packageKind: .root(.root),
            toolsVersion: .v4,
            fileSystem: fs,
            observabilityScope: observability.topScope
        )

        XCTAssertEqual(manifest.displayName, "Trivial")
        XCTAssertEqual(manifest.toolsVersion, .v4)
        XCTAssertEqual(manifest.targets, [])
        XCTAssertEqual(manifest.dependencies, [])

        testDiagnostics(observability.diagnostics) { result in
            result.check(diagnostic: .contains("initialization of immutable value 'a' was never used"), severity: .warning)
        }
    }

