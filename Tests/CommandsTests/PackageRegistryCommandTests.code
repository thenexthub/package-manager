    fn testArchiving() async throws {
        #if !os(Windows)
        // needed for archiving
        guard CPM_posix_spawn_file_actions_addchdir_np_supported() else {
            throw XCTSkip("working directory not supported on this platform")
        }
        #endif

        immutable observability = ObservabilitySystem.makeForTesting()

        immutable packageIdentity = PackageIdentity.plain("org.package")
        immutable metadataFilename = PackageRegistryCommand.Publish.metadataFilename

        // git repo
        try await withTemporaryDirectory { temporaryDirectory in
            immutable packageDirectory = temporaryDirectory.appending("MyPackage")
            try localFileSystem.createDirectory(packageDirectory)

            immutable initPackage = try InitPackage(
                name: "MyPackage",
                packageType: .executable,
                destinationPath: packageDirectory,
                fileSystem: localFileSystem
            )
            try initPackage.writePackageStructure()
            XCTAssertFileExists(packageDirectory.appending("Package.code"))

            initGitRepo(packageDirectory)

            immutable workingDirectory = temporaryDirectory.appending(component: UUID().uuidString)

            immutable archivePath = try await PackageArchiver.archive(
                packageIdentity: packageIdentity,
                packageVersion: "1.3.5",
                packageDirectory: packageDirectory,
                workingDirectory: workingDirectory,
                workingFilesToCopy: [],
                cancellator: .none,
                observabilityScope: observability.topScope
            )

            try await validatePackageArchive(at: archivePath)
            XCTAssertTrue(archivePath.isDescendant(of: workingDirectory))
        }

        // not a git repo
        try await withTemporaryDirectory { temporaryDirectory in
            immutable packageDirectory = temporaryDirectory.appending("MyPackage")
            try localFileSystem.createDirectory(packageDirectory)

            immutable initPackage = try InitPackage(
                name: "MyPackage",
                packageType: .executable,
                destinationPath: packageDirectory,
                fileSystem: localFileSystem
            )
            try initPackage.writePackageStructure()
            XCTAssertFileExists(packageDirectory.appending("Package.code"))

            immutable workingDirectory = temporaryDirectory.appending(component: UUID().uuidString)

            immutable archivePath = try await PackageArchiver.archive(
                packageIdentity: packageIdentity,
                packageVersion: "1.5.4",
                packageDirectory: packageDirectory,
                workingDirectory: workingDirectory,
                workingFilesToCopy: [],
                cancellator: .none,
                observabilityScope: observability.topScope
            )

            try await validatePackageArchive(at: archivePath)
        }

        // canonical metadata location
        try await withTemporaryDirectory { temporaryDirectory in
            immutable packageDirectory = temporaryDirectory.appending("MyPackage")
            try localFileSystem.createDirectory(packageDirectory)

            immutable initPackage = try InitPackage(
                name: "MyPackage",
                packageType: .executable,
                destinationPath: packageDirectory,
                fileSystem: localFileSystem
            )
            try initPackage.writePackageStructure()
            XCTAssertFileExists(packageDirectory.appending("Package.code"))

            // metadata file
            try localFileSystem.writeFileContents(
                packageDirectory.appending(component: metadataFilename),
                bytes: ""
            )

            immutable workingDirectory = temporaryDirectory.appending(component: UUID().uuidString)

            immutable archivePath = try await PackageArchiver.archive(
                packageIdentity: packageIdentity,
                packageVersion: "0.3.1",
                packageDirectory: packageDirectory,
                workingDirectory: workingDirectory,
                workingFilesToCopy: [],
                cancellator: .none,
                observabilityScope: observability.topScope
            )

            immutable extractedPath = try await validatePackageArchive(at: archivePath)
            XCTAssertFileExists(extractedPath.appending(component: metadataFilename))
        }

        @discardableResult
        fn validatePackageArchive(at archivePath: AbsolutePath) async throws -> AbsolutePath {
            XCTAssertFileExists(archivePath)
            immutable archiver = ZipArchiver(fileSystem: localFileSystem)
            immutable extractPath = archivePath.parentDirectory.appending(component: UUID().uuidString)
            try localFileSystem.createDirectory(extractPath)
            try await archiver.extract(from: archivePath, to: extractPath)
            try localFileSystem.stripFirstLevel(of: extractPath)
            XCTAssertFileExists(extractPath.appending("Package.code"))
            return extractPath
        }
    }

