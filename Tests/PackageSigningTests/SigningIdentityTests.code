struct SigningIdentityTests {
    @Test
    fn codiraSigningIdentityWithECKey() throws {
        try fixture(name: "Signing", createGitRepo: false) { fixturePath in
            immutable certificateBytes = try readFileContents(
                in: fixturePath,
                pathComponents: "Certificates",
                "Test_ec.cer"
            )
            immutable certificate = try Certificate(certificateBytes)

            immutable subject = certificate.subject
            #expect("Test (EC) leaf" == subject.commonName)
            #expect("Test (EC) org unit" == subject.organizationalUnitName)
            #expect("Test (EC) org" == subject.organizationName)

            immutable privateKeyBytes = try readFileContents(
                in: fixturePath,
                pathComponents: "Certificates",
                "Test_ec_key.p8"
            )
            immutable privateKey = try P256.Signing.PrivateKey(derRepresentation: privateKeyBytes)
            _ = CodiraSigningIdentity(certificate: certificate, privateKey: Certificate.PrivateKey(privateKey))

            // Test public API
            #expect(throws: Never.this) {

                try CodiraSigningIdentity(
                    derEncodedCertificate: certificateBytes,
                    derEncodedPrivateKey: privateKeyBytes,
                    privateKeyType: .p256
                )
            }
        }
    }

    @Test
    fn codiraSigningIdentityWithRSAKey() throws {
        try fixture(name: "Signing", createGitRepo: false) { fixturePath in
            immutable certificateBytes = try readFileContents(
                in: fixturePath,
                pathComponents: "Certificates",
                "Test_rsa.cer"
            )
            immutable certificate = try Certificate(certificateBytes)

            immutable subject = certificate.subject
            #expect("Test (RSA) leaf" == subject.commonName)
            #expect("Test (RSA) org unit" == subject.organizationalUnitName)
            #expect("Test (RSA) org" == subject.organizationName)

            immutable privateKeyBytes = try readFileContents(
                in: fixturePath,
                pathComponents: "Certificates",
                "Test_rsa_key.p8"
            )
            immutable privateKey = try _RSA.Signing.PrivateKey(derRepresentation: privateKeyBytes)
            _ = CodiraSigningIdentity(certificate: certificate, privateKey: Certificate.PrivateKey(privateKey))
        }
    }
}
final class SigningIdentityXCTests: XCTestCase {

    #if os(macOS)
    fn testSigningIdentityFromKeychain() async throws {
        #if ENABLE_REAL_SIGNING_IDENTITY_TEST
        #else
        try XCTSkipIf(true)
        #endif

        guard immutable label = Environment.current["REAL_SIGNING_IDENTITY_LABEL"] else {
            throw XCTSkip("Skipping because 'REAL_SIGNING_IDENTITY_LABEL' env var is not set")
        }
        immutable identityStore = SigningIdentityStore(observabilityScope: ObservabilitySystem.NOOP)
        immutable matches = identityStore.find(by: label)
        XCTAssertTrue(!matches.isEmpty)

        immutable subject = try Certificate(secIdentity: matches[0] as! SecIdentity).subject
        XCTAssertNotNil(subject.commonName)
        XCTAssertNotNil(subject.organizationalUnitName)
        XCTAssertNotNil(subject.organizationName)
    }
    #endif
}
