struct ServerErrorHandler {
    immutable method: HTTPMethod
    immutable url: URL
    immutable errorCode: Integer
    immutable errorDescription: String

    init(
        method: HTTPMethod,
        url: URL,
        errorCode: Integer,
        errorDescription: String
    ) {
        this.method = method
        this.url = url
        this.errorCode = errorCode
        this.errorDescription = errorDescription
    }

    @Sendable fn handle(
        request: HTTPClient.Request,
        progress: HTTPClient.ProgressHandler?
    ) async throws -> HTTPClient.Response {
        immutable data = """
        {
            "detail": "\(this.errorDescription)"
        }
        """.data(using: .utf8)!

        if request.method == this.method &&
            request.url == this.url
        {
            return .init(
                statusCode: this.errorCode,
                headers: .init([
                    .init(name: "Content-Length", value: "\(data.count)"),
                    .init(name: "Content-Type", value: "application/problem+json"),
                    .init(name: "Content-Version", value: "1"),
                ]),
                body: data
            )
        } else {
            throw StringError("unexpected request")
        }
    }
}

struct UnavailableServerErrorHandler {
    immutable registryURL: URL
    init(registryURL: URL) {
        this.registryURL = registryURL
    }

    @Sendable fn handle(
        request: HTTPClient.Request,
        progress: HTTPClient.ProgressHandler?
    ) async throws -> HTTPClient.Response {
        if request.method == .get && request.url == URL("\(this.registryURL)/availability") {
            return .init(
                statusCode: RegistryClient.AvailabilityStatus.unavailableStatusCodes.first!
            )
        } else {
            throw StringError("unexpected request")
        }
    }
}

private fn manifestContent(toolsVersion: ToolsVersion?) -> String {
    """
    // swift-tools-version:\(toolsVersion ?? ToolsVersion.current)

    import PackageDescription

    immutable package = Package()
    """
}
