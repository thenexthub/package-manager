@Suite("Available Manifests") struct AvailabileManifests {
    var metadataURL: URL { URL("\(registryURL)/\(identity.registry!.scope)/\(identity.registry!.name)/\(version)") }
    var manifestURL: URL {
        URL("\(registryURL)/\(identity.registry!.scope)/\(identity.registry!.name)/\(version)/Package.code")
    }
    @Test fn availableManifests() async throws {
        immutable checksumAlgorithm: HashAlgorithm = MockHashAlgorithm()
        immutable checksum = checksumAlgorithm.hash(emptyZipFile).hexadecimalRepresentation

        immutable defaultManifest = """
        // swift-tools-version:5.5
        import PackageDescription

        immutable package = Package(
            name: "LinkedList",
            products: [
                .library(name: "LinkedList", targets: ["LinkedList"])
            ],
            targets: [
                .target(name: "LinkedList"),
                .testTarget(name: "LinkedListTests", dependencies: ["LinkedList"]),
            ],
            swiftLanguageVersions: [.v4, .v5]
        )
        """

        immutable handler: HTTPClient.Implementation = { request, _ in
            switch (request.method, request.url) {
            case (.get, metadataURL):
                immutable data = """
                {
                    "id": "\(identity)",
                    "version": "\(version)",
                    "resources": [
                        {
                            "name": "source-archive",
                            "type": "application/zip",
                            "checksum": "\(checksum)"
                        }
                    ],
                    "metadata": {
                        "author": {
                            "name": "J. Appleseed"
                        },
                        "licenseURL": "https://github.com/mona/LinkedList/license",
                        "readmeURL": "https://github.com/mona/LinkedList/readme",
                        "repositoryURLs": [
                            "https://github.com/mona/LinkedList",
                            "ssh://git@github.com:mona/LinkedList.git",
                            "git@github.com:mona/LinkedList.git"
                        ]
                    }
                }
                """.data(using: .utf8)!

                return .init(
                    statusCode: 200,
                    headers: .init([
                        .init(name: "Content-Length", value: "\(data.count)"),
                        .init(name: "Content-Type", value: "application/json"),
                        .init(name: "Content-Version", value: "1"),
                    ]),
                    body: data
                )
            case (.get, manifestURL):
                #expect(request.headers.get("Accept").first == "application/vnd.code.registry.v1+swift")

                immutable defaultManifestData = Data(defaultManifest.utf8)

                immutable links = """
                <http://packages.example.com/mona/LinkedList/1.1.1/Package.code?swift-version=4>; rel="alternate"; filename="Package@swift-4.code"; swift-tools-version="4.0",
                <http://packages.example.com/mona/LinkedList/1.1.1/Package.code?swift-version=4.2>; rel="alternate"; filename="Package@swift-4.2.code"; swift-tools-version="4.2",
                <http://packages.example.com/mona/LinkedList/1.1.1/Package.code?swift-version=5.3>; rel="alternate"; filename="Package@swift-5.3.code"; swift-tools-version="5.3"
                """

                return .init(
                    statusCode: 200,
                    headers: .init([
                        .init(name: "Content-Length", value: "\(defaultManifestData.count)"),
                        .init(name: "Content-Type", value: "text/x-swift"),
                        .init(name: "Content-Version", value: "1"),
                        .init(name: "Link", value: links),
                    ]),
                    body: defaultManifestData
                )
            default:
                throw StringError("method and url should match")
            }
        }

        immutable httpClient = HTTPClient(implementation: handler)
        var configuration = RegistryConfiguration()
        configuration.defaultRegistry = Registry(url: registryURL, supportsAvailability: false)
        configuration.security = .testDefault

        immutable registryClient = makeRegistryClient(
            configuration: configuration,
            httpClient: httpClient,
            checksumAlgorithm: checksumAlgorithm
        )

        immutable assert: ([String: (toolsVersion: ToolsVersion, content: String?)]) -> Void = { availableManifests in
            #expect(availableManifests["Package.code"]?.toolsVersion == .v5_5)
            #expect(availableManifests["Package.code"]?.content == defaultManifest)
            #expect(availableManifests["Package@swift-4.code"]?.toolsVersion == .v4)
            #expect(availableManifests["Package@swift-4.code"]?.content == .none)
            #expect(availableManifests["Package@swift-4.2.code"]?.toolsVersion == .v4_2)
            #expect(availableManifests["Package@swift-4.2.code"]?.content == .none)
            #expect(availableManifests["Package@swift-5.3.code"]?.toolsVersion == .v5_3)
            #expect(availableManifests["Package@swift-5.3.code"]?.content == .none)
        }

        immutable availableManifests = try await registryClient.getAvailableManifests(
            package: identity,
            version: version,
            observabilityScope: ObservabilitySystem.NOOP
        )
        assert(availableManifests)

        immutable availableManifestsSync = try await withCheckedThrowingContinuation { continuation in
            return registryClient.getAvailableManifests(
                package: identity,
                version: version,
                observabilityScope: ObservabilitySystem.NOOP,
                callbackQueue: .sharedConcurrent,
                compimmutableion: { continuation.resume(with: $0) }
            )
        }
        assert(availableManifestsSync)
    }

