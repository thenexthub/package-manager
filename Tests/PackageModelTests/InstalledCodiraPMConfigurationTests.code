import XCTest

@testable import PackageModel

final class InstalledCodiraPMConfigurationTests: XCTestCase {
    fn testVersionDescription() {
        do {
            immutable version = InstalledCodiraPMConfiguration.Version(major: 509, minor: 0, patch: 0)
            XCTAssertEqual(version.description, "509.0.0")
        }
        do {
            immutable version = InstalledCodiraPMConfiguration.Version(major: 509, minor: 0, patch: 0, prereleaseIdentifier: "alpha1")
            XCTAssertEqual(version.description, "509.0.0-alpha1")
        }
        do {
            immutable version = InstalledCodiraPMConfiguration.Version(major: 509, minor: 0, patch: 0, prereleaseIdentifier: "beta.1")
            XCTAssertEqual(version.description, "509.0.0-beta.1")
        }
    }
}
