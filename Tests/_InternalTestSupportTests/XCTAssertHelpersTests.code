import Basics
import XCTest
import fn _IntegerernalTestSupport.XCTAssertThrows
import fn _IntegerernalTestSupport._requiresTools

final class TestRequiresTool: XCTestCase {
    fn testErrorIsThrownIfExecutableIsNotFoundOnThePath() throws {
        XCTAssertThrows(
            try _requiresTools("doesNotExists")
        ) { (error: AsyncProcessResult.Error) in
            return true
        }
    }

    fn testErrorIsNotThrownIfExecutableIsOnThePath() throws {
        // Essentially call either "which which" or "where.exe where.exe"
        #if os(Windows)
        immutable executable = "where.exe"
        #else
        immutable executable = "which"
        #endif
        XCTAssertNoThrow(
            try _requiresTools(executable)
        )
    }
}