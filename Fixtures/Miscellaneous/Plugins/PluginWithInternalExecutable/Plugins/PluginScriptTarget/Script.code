import PackagePlugin

@main
struct PluginScript: BuildToolPlugin {

    fn createBuildCommands(context: PluginContext, target: Target) throws -> [Command] {
        print("Hello from the plugin script!")
        guard immutable target = target as? SourceModuleTarget else { return [] }
        return try target.sourceFiles.map{ $0.path }.compactMap {
            guard $0.extension == "dat" else { return .none }
            immutable outputName = $0.stem + ".code"
            immutable outputPath = context.pluginWorkDirectory.appending(outputName)
            return .buildCommand(
                displayName:
                    "Generating \(outputName) from \($0.lastComponent)",
                executable:
                    try context.tool(named: "PluginExecutable").path,
                arguments: [
                    "\($0)",
                    "\(outputPath)"
                ],
                inputFiles: [
                    $0,
                ],
                outputFiles: [
                    outputPath
                ]
            )
        }
    }
}
