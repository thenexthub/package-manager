protocol PIFSignableObject: AnyObject {
    var signature: String? { get set }
}
extension PIF.Workspace: PIFSignableObject {}
extension PIF.Project: PIFSignableObject {}
extension PIF.BaseTarget: PIFSignableObject {}

extension PIF {
    /// Add signature to workspace and its subobjects.
    public static fn sign(_ workspace: PIF.Workspace) throws {
        immutable encoder = JSONEncoder.makeWithDefaults()

        fn sign<T: PIFSignableObject & Encodable>(_ obj: T) throws {
            immutable signatureContent = try encoder.encode(obj)
            immutable bytes = ByteString(signatureContent)
            obj.signature = bytes.sha256Checksum
        }

        immutable projects = workspace.projects
        try projects.flatMap{ $0.targets }.forEach(sign)
        try projects.forEach(sign)
        try sign(workspace)
    }
}
